<script type="text/javascript">
	var currentView = 4;
	var amountOfViews = 5;

	$(document).ready(function (){
		$("iframe").height($( window ).height() - 210);

		$("iframe").hide();
		switchToView(currentView);
	});

	
	function switchToView(newView){
		currentView = newView;
		
	
		$("iframe[id!='"+ getIdbyNumber(newView) + "']").animate({left: "100%"}, 1000);
		$("iframe[id!='"+ getIdbyNumber(newView) + "']").hide();
		$("#" + getIdbyNumber(newView)).css("left", "-100%");
		$("#" + getIdbyNumber(newView)).show();
		$("#" + getIdbyNumber(newView)).animate({left: "0%"}, 1000);
	
		//$("iframe[id!='"+ getIdbyNumber(newView) + "']").slideUp(1000, function(){
			//$("#" + getIdbyNumber(newView)).slideDown(1000);
		//});
	}	
	
	function getIdbyNumber(number){
		if(number > amountOfViews) return "panel_" + 1;
		
		return "panel_" + number;
	}
	
	$(document).bind('scroll', function(ev) {
		ev.preventDefault();
		console.log('Event worked');
    }); 	
	
</script>


        <!-- The JavaScript -->
        <script type="text/javascript">
            $(function() {
				var $oe_menu		= $('#oe_menu');
				var $oe_menu_items	= $oe_menu.children('li');
				var $oe_overlay		= $('#oe_overlay');
				var $iframes		= $('iframe');

                $oe_menu_items.bind('mouseenter',function(){
					var $this = $(this);
					$this.addClass('slided selected');
					$this.children('div').css('z-index','9999').stop(true,true).slideDown(200,function(){
						$oe_menu_items.not('.slided').children('div').hide();
						$this.removeClass('slided');
					});
				}).bind('mouseleave',function(){
					var $this = $(this);
					$this.removeClass('selected').children('div').css('z-index','1');
					$oe_menu_items.children('div').hide();
				});

				$oe_menu.bind('mouseenter',function(){
					var $this = $(this);
					$oe_overlay.show();
					$oe_overlay.stop(true,true).fadeTo(500, 0.6);
					$iframes.animate({opacity: "0.4"}, 500);
					$this.addClass('hovered');
				}).bind('mouseleave',function(){
					var $this = $(this);
					$this.removeClass('hovered');
					$iframes.animate({opacity: "1"}, 500);
					$oe_overlay.stop(true,true).fadeTo(500, 0);
					$oe_overlay.hide();
				})
            });
        </script>
